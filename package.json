{
  "name": "settings-formatter",
  "displayName": "Settings Formatter",
  "description": "A VSCode extension to format settings files by parameter types with preview functionality",
  "version": "0.1.0",
  "publisher": "lyric-zemin",
  "repository": {
    "type": "git",
    "url": "https://github.com/lyric-zemin/settings-formatter.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "settings-formatter.formatSettings",
        "title": "Format Settings File"
      },
      {
        "command": "settings-formatter.previewSettings",
        "title": "Preview Settings Formatting"
      }
    ],
    "configuration": {
      "title": "Settings Formatter",
      "properties": {
        "settings-formatter.preserveComments": {
          "type": "boolean",
          "default": true,
          "description": "Preserve comments in settings file"
        },
        "settings-formatter.sortKeys": {
          "type": "boolean",
          "default": true,
          "description": "Sort settings keys alphabetically"
        },
        "settings-formatter.indentSize": {
          "type": "number",
          "default": 2,
          "minimum": 1,
          "maximum": 8,
          "description": "Number of spaces for indentation"
        },
        "settings-formatter.categorySeparator": {
          "type": "string",
          "default": "====================",
          "description": "Separator string for category blocks",
          "enum": [
            "====================",
            "--------------------",
            "********************",
            "####################"
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "package": "npx vsce package",
    "publish": "npx vsce publish",
    "publish-dry-run": "npx vsce publish --dry-run",
    "verify-package": "npx vsce ls"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.5",
    "@vscode/vsce": "^2.19.0"
  }
}